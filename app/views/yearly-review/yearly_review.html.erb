<!-- The following tables can be grouped -->
<div data-review-topic="true">
<% @user_stats.each do |obj| %>
  <% if obj[:users] %>
  <h3><%= t("yearly_review.title.#{obj[:key]}") %></h3>
  <table>
    <tr>
      <th>
        <%= t('yearly_review.user') %>
      </th>
      <th>
        <%= t("yearly_review.action.#{obj[:key]}") %>
      </th>
    </tr>
  <% obj[:users].each do |user| %>
    <tr>
      <td>
        <%= raw(avatar_image(user.username, user.uploaded_avatar_id)) %>
        <%= raw(user_link(user.username)) %>
      </td>
      <td>
        <%= user.action_count %>
      </td>
    </tr>
  <% end %>
  </table>
  <% end %>
<% end %>

<% @category_topics_arr.each do |obj| %>
  <h3><%= t("yearly_review.#{obj[:key]}.title") %></h3>
  <h4>
    <%= raw(category_link_title(obj[:topics][0][0].category_id, obj[:topics][0][0].category_slug, obj[:topics][0][0].category_name)) %>
  </h4>
  <% obj[:topics].each do |category_topics| %>
  <table>
    <tr>
      <th>
        <%= t("yearly_review.#{obj[:key]}.type") %>
      </th>
      <th>
        <%= t("yearly_review.#{obj[:key]}.action") %>
      </th>
    </tr>
    <% category_topics.each do |topic| %>
      <tr>
        <td>
          <%= raw(topic_link(topic.topic_slug, topic.title, topic.id, topic.post_number)) %>
        </td>
        <td>
          <%= topic.action_count %>
        </td>
      </tr>
    <% end %>
  </table>
  <br>
  <% end %>
<% end %>
  <% if @featured_badge_users %>
    <h3><%= raw( badge_title_link(@featured_badge_users[0].id, @featured_badge_users[0].name, @featured_badge_users[0].icon, @featured_badge_users[0].image)) %></h3>
<% @featured_badge_users.each do |user| %>
  <span>
    <%= raw(avatar_image(user.username, user.uploaded_avatar_id)) %>
    <%= raw(user_link(user.username)) %>
  </span>
  <% end %>
  <% end %>
</div>
